    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="300sp"
        android:layout_height="136sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="300sp"
        android:layout_height="136sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="180dp"
        android:timePickerMode="spinner"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/Find"
        android:layout_width="380sp"
        android:layout_height="103sp"
        android:layout_marginBottom="24sp"
        android:background="@drawable/button2"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="251sp"
        android:layout_height="45sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toEndOf="@+id/Range"
        app:layout_constraintTop_toBottomOf="@+id/nlocation" />

    <TextView

        android:id="@+id/showRange"
        android:layout_width="73sp"
        android:layout_height="48sp"
        android:layout_marginStart="8dp"
