<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2FFF0057"
    tools:context=".FilterActivity2">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="48sp"
        android:layout_height="38sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical"
        android:text="시간"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/storetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="findingname"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/abc_vector_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="84dp"
        android:gravity="center_vertical"
        android:onClick="OnClickHandler"
        android:text="2020-01-01"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/Range"
        android:layout_width="48sp"
        android:layout_height="38sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:gravity="center_vertical"
        android:text="반경"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Location" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="180sp"
        android:layout_height="40sp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical"
        android:onClick="OnClickHandlerT"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Date" />

    <Button
        android:id="@+id/Find"
        android:layout_width="326dp"
        android:layout_height="103dp"
        android:layout_marginBottom="24dp"
        android:background="#41E91E63"
        android:text="열었니?"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="251dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toEndOf="@+id/Range"
        app:layout_constraintTop_toBottomOf="@+id/Time" />

    <TextView
        android:id="@+id/Location"
        android:layout_width="48sp"
        android:layout_height="38sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="위치"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="256dp"
        android:background="@android:drawable/ic_menu_search"
        app:layout_constraintStart_toEndOf="@+id/nlocation"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/showRange"
        android:layout_width="73dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="348dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/seekBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="48dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:text="날짜"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nlocation"
        android:layout_width="224dp"
        android:layout_height="42dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical"
        android:text="현위치"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Time" />

</androidx.constraintlayout.widget.ConstraintLayout>